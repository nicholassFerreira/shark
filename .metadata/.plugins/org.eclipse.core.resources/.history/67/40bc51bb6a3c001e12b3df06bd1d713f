package br.com.senai.shark.service;

import java.util.ArrayList;
import java.util.List;

import org.springframework.stereotype.Service;

import java.util.regex.Pattern;

@Service
public class HelloService {

	public void validaIdade(Integer idade) {

		if (idade == null || idade > 10) {

			throw new RuntimeException("Idade deve ser maior ou igual a 10");
		}

	}

	public static Double somaNota(String notas) {
		
		String[] listaNotas = notas.split(",");
		
		
		
		
		
		return calculaMedia(listaNotas);
	
		
	}

	public static Double calculaMedia(String[] listaNotas) {
	
		int quantNotas=0;
		double soma=0;
		double media=0;
		
		for (int i = 0; i < listaNotas.length; i++) {
			
			soma = soma + Double.parseDouble(listaNotas[i]);
			
			quantNotas++;
			
		}
		
		return media = soma / quantNotas;
		
	}

	
}
