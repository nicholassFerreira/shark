package br.com.senai.shark.service;

import java.util.List;

import org.springframework.stereotype.Service;

@Service
public class HelloService {

	public void validaIdade(Integer idade) {

		if (idade == null || idade > 10) {

			throw new RuntimeException("Idade deve ser maior ou igual a 10");
		}

	}

	public static double calculaNota(List<Double> listaNotas) {

		double nota=0;
		double mediaFinal;
		int quantNota=0;
		
for (int i = 0; i < listaNotas.size(); i++) {
	
	nota = nota + listaNotas.get(i);
	quantNota++;
	
}
	
	return mediaFinal = nota / quantNota;
		
	}

}
